    <result column="id" property="id" />
    <result column="is_deleted" property="isDeleted" />
    <result column="creator" property="creator" />
    <result column="create_time" property="createTime" />
    <result column="mender" property="mender" />
    <result column="modify_time" property="modifyTime" />
        <result column="source_name" property="sourceName" />
        <result column="source_descr" property="sourceDescr" />
        <result column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
        <result column="is_parent" property="isParent" />
        <result column="parent_source_id" property="parentSourceId" />
        <result column="parent_source_name" property="parentSourceName" />
        <result column="is_editable" property="isEditable" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        is_deleted,
        creator,
        create_time,
        mender,
        modify_time,
        source_name, source_descr, category_id, category_name, is_parent, parent_source_id, parent_source_name, is_editable
    </sql>

</mapper>
